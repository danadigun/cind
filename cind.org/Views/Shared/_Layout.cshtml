                <ul id="slide-out" class="side-nav">
                    <li>
                        <div class="userView">
                            &nbsp;
                            @*<img class="background" src="images/office.jpg">
                                <a href="#!user"><img class="circle" src="images/yuna.jpg"></a>
                                <a href="#!name"><span class="white-text name">John Doe</span></a>
                                <a href="#!email"><span class="white-text email">jdandturk@gmail.com</span></a>*@
                        </div>
                    </li>
                    <li>
                        <a href="~/Home">
                            <i class="ion ion-ios-photos-outline"></i>&nbsp;General Information
                        </a>
                    </li>

                    <li>
                        <a href="~/Home/About">
                            <i class="ion ion-ios-list-outline"></i>&nbsp;About CIND
                        </a>
                    </li>

                    <li>
                        <a href="~/Home/ThematicAreas">
                            <i class="ion ion-ios-unlocked-outline"></i>&nbsp;Thematic Areas
