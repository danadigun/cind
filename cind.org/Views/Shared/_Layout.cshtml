                    </li>
                    <li>
                        <a href="~/Home/programs">
                            <i class="ion ion-ios-clock-outline"></i>&nbsp;Programs
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <nav class="top-sub-nav hide-on-med-and-down">
            <div class="nav-wrapper">
                <ul id="nav-mobile" class="center hide-on-med-and-down">
                    <li>
                        <a href="~/Home">
                            <i class="ion ion-ios-photos-outline"></i>&nbsp;General Information
                        </a>
                    </li>
                    @*<li>
                            <a href="#">
                                <i class="ion ion-ios-briefcase-outline"></i>&nbsp;Organizational Structure
                            </a>
                        </li>*@
                    <li>
                        <a href="~/Home/About">
                            <i class="ion ion-ios-list-outline"></i>&nbsp;About CIND
                        </a>
                    </li>
                    @*<li>
                            <a href="#">
                                <i class="ion ion-ios-people-outline"></i>&nbsp;Key Personnel
                            </a>
                        </li>*@
                    <li>
                        <a href="~/Home/ThematicAreas">
                            <i class="ion ion-ios-unlocked-outline"></i>&nbsp;Thematic Areas
                        </a>
                    </li>
                    <li>
                        <a href="~/Home/programs">
                            <i class="ion ion-ios-clock-outline"></i>&nbsp;Programs
                        </a>
                    </li>

                </ul>
            </div>
        </nav>
        @RenderBody()

        <footer class="hide-on-med-and-down">
            <div class="row">
                <div class="col s4 quicklinks">
                    <h4>Quick Links</h4><br />
                    <span><a href="#"><i class="ion ion-ios-circle-outline"></i>General Information</a></span>
                    <span><a href="#"><i class="ion ion-ios-circle-outline"></i>Conferences & Programs</a></span>
                    <span><a href="#"><i class="ion ion-ios-circle-outline"></i>About the CIND Community</a></span>
                    @*<l1></l1>*@

                </div>
                <div class="col s4">
                    <h4>Contacts</h4><br />
                    <p><b>Email: </b>contact@cind.org</p>
                    <p>
                        <b>Dr. N.W.Ebiti</b><br />
                        No. 1 Libya Road, Barnawa Phase 1 Barnawa.
                        Kaduna, Nigeria.
                    </p>
                    <p>
                        <a href="#modal1" class="btn btn-flat modal-trigger">Drop a message</a>
                    </p>
                </div>
                <div class="col s4"></div>
            </div>
        </footer>
        <p class="copyright">
            <span>
                <a href="#"><i class="ion ion-social-twitter-outline"></i></a>
                <a href="#"><i class="ion ion-social-facebook-outline"></i></a>
                <a href="#"><i class="ion ion-social-googleplus-outline"></i></a>
            </span>
            &copy; @DateTime.Now.Year - Copyright Cind.org. all rights reserved<br /><br />
            <span style="font-size:8pt">Powered by <a style="font-size:8pt" href="http://digitalforte.ng">Digital Forte Enterprise Systems Ltd.</a></span><br />
            <a href="#modal1" class="btn btn-flat modal-trigger hide-on-large-only">Drop a message</a>
        </p>

        <!-- Modal For messaging -->
        <div id="modal1" class="modal bottom-sheet">
            <div class="modal-content">
                <h4>Drop a Message</h4>
                <p>Please kindly drop a message and we'll get back to you as soon as we possible. </p>
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="firstname" type="text" class="validate">
                                <label for="firstname" data-error="wrong" data-success="right">First Name</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="Lastname" type="text" class="validate">
                                <label for="Lastname" data-error="wrong" data-success="right">Last Name</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="email" type="email" class="validate">
                                <label for="email" data-error="wrong" data-success="right">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="message" class="materialize-textarea"></textarea>
                                <label for="message">Your Message</label>
                            </div>
                        </div>
                    </form>
                </div>
               
            </div>
            <div class="modal-footer">
                <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">cancel</a>
                <button class=" modal-action  waves-effect waves-green btn-flat">Send message</button>
            </div>
        </div>

    </div>
    <script>
        $(function () {
            // Initialize collapse button
            $(".button-collapse").sideNav();

            $('.modal-trigger').leanModal();

        })
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>
