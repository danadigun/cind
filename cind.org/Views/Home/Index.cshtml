<script>
    $(function () {
        $('.carousel.carousel-slider').carousel(
            {
                full_width: true,
                indicators: true,
            });
        $('.next').click(function () {
            $('.carousel').carousel('next');
        })
        $('.previous').click(function () {
            $('.carousel').carousel('prev');
        })

        setInterval(function () {
            $('.carousel').carousel('next')
        }, 10000);

        $('.carousel.community').carousel();
    })
</script>

