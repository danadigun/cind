@{
    ViewBag.Title = "Official Website of cind.org";
}


<div class="carousel carousel-slider center " data-indicators="true" style="height: 80vh;">

    <div class="carousel-item item-one">
        <img src="~/img/dreamstime_xl_47035808.jpg" />
       
    </div>
    <div class="carousel-item item-two">
        <img src="~/img/dreamstime_l_3433856.jpg" />
    </div>
  
    <div>
        <a class="btn btn-flat next ">
            <i class="ion ion-ios-arrow-right"></i>
        </a>
        <a class="btn btn-flat previous ">
            <i class="ion ion-ios-arrow-left"></i>
        </a>
    </div>

</div>

<script>
    $(function () {
        $('.carousel.carousel-slider').carousel(
            {
                full_width: true,
                indicators: true,
            });
        $('.next').click(function () {
            $('.carousel').carousel('next');
        })
        $('.previous').click(function () {
            $('.carousel').carousel('prev');
        })

        setInterval(function () {
            $('.carousel').carousel('next')
        }, 10000);
    })
</script>

<style>
    .next  {
        margin-top:45vh;
        float:right;
        margin-right:2em;
        opacity: 0.4;
        background : none;
    }
     .previous  {
        margin-top:45vh;
        float:left;
        margin-left:2em;
        opacity: 0.4;
        background : none;

    }
   
</style>